# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=salt_app
DATABASE_USER=salt_app
DATABASE_PASSWORD=your_password_here
DATABASE_MAX_CONNECTIONS=20

# MinIO Configuration
MINIO_ENDPOINT=master
MINIO_PORT=31000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=fidelio!
MINIO_USE_SSL=false
MINIO_REGION=us-west-1

# Storage Buckets
BUCKET_SESSION_MEDIA=session-media
BUCKET_AVATARS=avatars
BUCKET_BOARD_PHOTOS=board-photos

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# Logging
LOG_LEVEL=info

# JWT Configuration (CRITICAL - CHANGE IN PRODUCTION)
# Generate a secure random string: openssl rand -base64 32
# NEVER commit your actual JWT_SECRET to version control
# Copy this file to .env and set a strong secret
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d
